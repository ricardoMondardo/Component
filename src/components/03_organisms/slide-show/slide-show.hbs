<div class="c-slide-show">

    <div class="c-slide-show__slide c-slide-show__fade">
        <div class="c-slide-show__numbertext">1 / 3</div>
        <img class="c-slide-show__img" src="{{slide.img1}}">
        <div class="c-slide-show__text">Caption Text</div>
    </div>

    <div class="c-slide-show__slide c-slide-show__fade"> 
        <div class="c-slide-show__numbertext">2 / 3</div>
        <img class="c-slide-show__img" src="{{slide.img2}}">
        <div class="c-slide-show__text">Caption Two</div>
    </div>

    <div class="c-slide-show__slide c-slide-show__fade">
        <div class="c-slide-show__numbertext">3 / 3</div>
        <img class="c-slide-show__img" src="{{slide.img3}}">
        <div class="c-slide-show__text">Caption Three</div>
    </div>

    <a class="c-slide-show__arrow" 
       onclick="plusSlides(-1)">&#10094;</a>
    <a class="c-slide-show__arrow c-slide-show__arrow--rigth" 
       onclick="plusSlides(1)">&#10095;</a>

    <div class="c-slide-show__dot-container">
        <span class="c-slide-show__dot" onclick="currentSlide(1)"></span> 
        <span class="c-slide-show__dot" onclick="currentSlide(2)"></span> 
        <span class="c-slide-show__dot" onclick="currentSlide(3)"></span> 
    </div>

    <script src="{{ path '/js/slide-show.js' }}"></script>
</div><br>




